                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <telerik:RadTreeView x:Name="PART_EditorCategoriesTree"
                                BorderThickness="0,1,1,1"
                                BorderBrush="{telerik:Windows8Resource ResourceKey=BasicBrush}"
                                Grid.Column="0"
                                ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                ItemTemplate="{StaticResource CategoryItemTemplate}"
                                IsLineEnabled="True"/>
                        <telerik:RadTreeView x:Name="PART_EditorItemsTree"
                                FontWeight="Bold"
                                BorderThickness="0,1,0,1"
                                BorderBrush="{telerik:Windows8Resource ResourceKey=BasicBrush}"
                                Grid.Column="1"
                                ItemsSource="{Binding CategoryItems}"
                                SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                DisplayMemberPath="Name"/>
                    </Grid>
                    <Border x:Name="EditorInfoPanel"
                            Grid.Row="3"
                            BorderBrush="{StaticResource RadExpressionEditor_InfoPanel_BorderBrush}"
                            Background="{telerik:Windows8Resource ResourceKey=MainBrush}"
                            BorderThickness="0,1,0,0"
                            Height="75">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                    Text="{Binding SelectedItem.QuickInfo}"
                                    Foreground="{telerik:Windows8Resource ResourceKey=MarkerBrush}"
                                    FontWeight="Bold"
                                    FontSize="{telerik:Windows8Resource ResourceKey=FontSizeS}"
                                    FontFamily="{telerik:Windows8Resource ResourceKey=FontFamily}"/>
                            <TextBlock
                                    Text="{Binding SelectedItem.Description}"
                                    Foreground="{telerik:Windows8Resource ResourceKey=MarkerBrush}"
                                    TextWrapping="Wrap"
                                    Grid.Row="1"
                                    FontSize="{telerik:Windows8Resource ResourceKey=FontSizeS}"
                                    FontFamily="{telerik:Windows8Resource ResourceKey=FontFamily}"/>
                        </Grid>
                    </Border>
                    <Border x:Name="EditorResultsPanel"
                            Grid.Row="4"
                            BorderBrush="{telerik:Windows8Resource ResourceKey=BasicBrush}"
                            BorderThickness="0,1,0,0"
                            Background="{telerik:Windows8Resource ResourceKey=MainBrush}">
                        <StackPanel Orientation="Horizontal" Margin="6">
                            <TextBlock
                                    Text="Result preview:"
                                    Foreground="{telerik:Windows8Resource ResourceKey=MarkerBrush}"
                                    HorizontalAlignment="Right"
                                    FontSize="{telerik:Windows8Resource ResourceKey=FontSizeS}"
                                    FontFamily="{telerik:Windows8Resource ResourceKey=FontFamily}"/>
                            <TextBlock
                                    Text="{Binding PreviewResult}"
                                    Foreground="{telerik:Windows8Resource ResourceKey=MarkerBrush}"
                                    TextAlignment="Right"
                                    FontSize="{telerik:Windows8Resource ResourceKey=FontSizeS}"
                                    FontFamily="{telerik:Windows8Resource ResourceKey=FontFamily}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>
    <Style x:Key="RadExpressionEditorStyle" TargetType="controls:RadExpressionEditor">
        <Setter Property="Template" Value="{StaticResource RadExpressionEditorTemplate}"/>
        <Setter Property="Background" Value="{telerik:Windows8Resource ResourceKey=MainBrush}"/>
        <Setter Property="BorderBrush" Value="{telerik:Windows8Resource ResourceKey=BasicBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
    </Style>
    <Style TargetType="controls:RadExpressionEditor" BasedOn="{StaticResource RadExpressionEditorStyle}"/>
    <Style TargetType="expressions:ExpressionTextBox" BasedOn="{StaticResource ExpressionTextBoxStyle}"/>
</ResourceDictionary>
