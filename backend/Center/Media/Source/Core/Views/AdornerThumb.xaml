<UserControl x:Class="Gorba.Center.Media.Core.Views.AdornerThumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="8" d:DesignWidth="8" UseLayoutRounding="True">
    <Grid>
        <Rectangle Width="8" Height="8" Stroke="{StaticResource LayoutElementAdornerThumbBorderColorBrush}"
                   StrokeThickness="1"
                   Fill="{StaticResource LayoutElementAdornerThumbDarkBackgroundColorBrush}"
                   Margin="0" SnapsToDevicePixels="True"  />

        <Rectangle Width="4" Height="4" Fill="{StaticResource LayoutElementAdornerThumbBackgroundColorBrush}"
                   Margin="2" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="NearestNeighbor" />
    </Grid>
</UserControl>
