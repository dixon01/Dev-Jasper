        <ComboBox Grid.Column="2" HorizontalAlignment="Left" Margin="35,14,0,0" Grid.Row="8" VerticalAlignment="Top" Width="120" Height="26" ItemsSource="{Binding PinMeaningValues.Options, UpdateSourceTrigger=PropertyChanged}" 
            SelectedValue="{Binding PinMeaningValues.Odometer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

